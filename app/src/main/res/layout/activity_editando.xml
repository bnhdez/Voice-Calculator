<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/Titulo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voice Calculator"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="35dp"
                    android:textSize="48dp"
                    android:fontFamily="@font/fredokaregular"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/microfono1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@drawable/microfono"
                    android:layout_below="@id/Titulo1"
                    android:layout_marginLeft="75dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="35dp" />

                <TextView
                    android:id="@+id/texto"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/microfono1"
                    android:text=""
                    android:fontFamily="@font/fredokaregular"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:background="@drawable/style_textview"/>

                <Button
                    android:id="@+id/btnCalcular1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calcular"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/microfono1"
                    android:layout_below="@id/Titulo1"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="80dp"
                    android:layout_centerHorizontal="true"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="40dp"/>

                <Button
                    android:id="@+id/btnAC"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/texto"
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/style_textview"
                    android:fontFamily="@font/fredokaregular"
                    android:text="AC"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btnmasmenos"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="+/-"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/btnAC"
                    android:layout_below="@id/texto"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_textview"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btnporcent"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/btnmasmenos"
                    android:layout_below="@id/texto"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_textview"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btnentre"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="รท"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/btnporcent"
                    android:layout_below="@id/texto"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="38dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_textview"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btnAC"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentStart="true"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btnAC"
                    android:layout_toEndOf="@id/btn7"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btnAC"
                    android:layout_toEndOf="@id/btn8"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btnmult"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btnAC"
                    android:layout_toEndOf="@id/btn9"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="38dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btn7"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentStart="true"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btn7"
                    android:layout_toEndOf="@id/btn4"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btn7"
                    android:layout_toEndOf="@id/btn5"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btnmenos"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btn7"
                    android:layout_toEndOf="@id/btn6"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="38dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btn4"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentStart="true"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btn4"
                    android:layout_toEndOf="@id/btn1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btn4"
                    android:layout_toEndOf="@id/btn2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btnmas"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btn4"
                    android:layout_toEndOf="@id/btn3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="38dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btn1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentStart="true"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="40dp"/>

                <Button
                    android:id="@+id/btnpunto"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btn1"
                    android:layout_toEndOf="@id/btn0"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="40dp"/>

                <Button
                    android:id="@+id/btnigual"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/fredokaregular"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_below="@id/btn1"
                    android:layout_toEndOf="@id/btnpunto"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="38dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/style_btn"
                    android:layout_marginBottom="40dp"/>

            </RelativeLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>